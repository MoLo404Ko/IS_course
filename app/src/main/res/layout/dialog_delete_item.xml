<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_dialog"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="22dp"
        android:layout_height="22dp"

        android:background="@drawable/ic_cross"

        android:layout_marginTop="17dp"
        android:layout_marginRight="10dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </ImageButton>

    <TextView
        android:id="@+id/delete_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_weight="1"
        android:text="@string/chose_delete_item"
        style="@style/boldFont_16"

        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@id/btn_close"
        app:layout_constraintLeft_toLeftOf="parent"
        >
    </TextView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/delete_recycler"
        android:layout_width="268dp"
        android:layout_height="100dp"

        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"

        app:layout_constraintTop_toBottomOf="@id/delete_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </androidx.recyclerview.widget.RecyclerView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/delete_btn"
        android:layout_width="140dp"
        android:layout_height="40dp"

        android:background="@drawable/shape_bg_add_category_btn"

        android:text="@string/delete_item"
        android:layout_marginBottom="30dp"

        android:textColor="@color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/rubik_medium"

        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/delete_recycler"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

    </androidx.appcompat.widget.AppCompatButton>

</androidx.constraintlayout.widget.ConstraintLayout>