<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_add_income_layout"
    android:layout_width="286dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_dialog"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/btn_close_dialog_add_category"
        android:layout_width="23dp"
        android:layout_height="23dp"

        android:background="@drawable/ic_cross"

        android:layout_marginTop="17dp"
        android:layout_marginRight="20dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </ImageButton>
    
    <TextView
        android:id="@+id/name_add_category_income"
        
        style="@style/boldFont_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:text="@string/add_category_name"

        app:layout_constraintTop_toBottomOf="@id/btn_close_dialog_add_category"
        app:layout_constraintLeft_toLeftOf="parent">
    </TextView>
    
    <EditText
        android:id="@+id/name_add_category_income_edit"
        android:layout_width="248dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_edit_text_add_dialog"

        android:paddingLeft="10dp"
        android:layout_marginTop="7dp"

        app:layout_constraintTop_toBottomOf="@id/name_add_category_income"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </EditText>

    <TextView
        android:id="@+id/colors_add_category_income_text"

        style="@style/boldFont_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/add_colors"

        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"

        app:layout_constraintTop_toBottomOf="@id/name_add_category_income_edit"
        app:layout_constraintLeft_toLeftOf="parent">
    </TextView>

    <ImageButton
        android:id="@+id/no_color"
        android:layout_width="30dp"
        android:layout_height="30dp"

        android:background="@drawable/ic_no_color"

        android:layout_marginTop="7dp"
        android:layout_marginLeft="20dp"

        app:layout_constraintTop_toBottomOf="@id/colors_add_category_income_text"
        app:layout_constraintLeft_toLeftOf="parent"
        >
    </ImageButton>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/colors_add_category_income"
        android:layout_width="248dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"
        android:clickable="true"

        app:layout_constraintTop_toBottomOf="@id/colors_add_category_income_text"
        app:layout_constraintLeft_toRightOf="@id/no_color"
        app:layout_constraintRight_toRightOf="parent">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/icons_add_category_income_text"

        style="@style/boldFont_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/add_icon"

        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"

        app:layout_constraintTop_toBottomOf="@id/colors_add_category_income"
        app:layout_constraintLeft_toLeftOf="parent">
    </TextView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/icons_layout_add_category"
        android:layout_width="248dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="7dp"

        app:layout_constraintTop_toBottomOf="@id/icons_add_category_income_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageButton
            android:id="@+id/icon_1"
            android:layout_width="35dp"
            android:layout_height="35dp"

            android:background="@drawable/ic_bag">
        </ImageButton>

        <ImageButton
            android:id="@+id/icon_2"
            android:layout_width="35dp"
            android:layout_height="35dp"

            android:layout_marginLeft="6dp"

            android:background="@drawable/ic_basket">
        </ImageButton>

        <ImageButton
            android:id="@+id/icon_3"
            android:layout_width="35dp"
            android:layout_height="35dp"

            android:layout_marginLeft="6dp"

            android:background="@drawable/ic_grow">
        </ImageButton>

        <ImageButton
            android:id="@+id/icon_4"
            android:layout_width="35dp"
            android:layout_height="35dp"

            android:layout_marginLeft="6dp"

            android:background="@drawable/ic_bag">
        </ImageButton>

        <ImageButton
            android:id="@+id/icon_5"
            android:layout_width="35dp"
            android:layout_height="35dp"

            android:layout_marginLeft="6dp"

            android:background="@drawable/ic_basket">
        </ImageButton>

        <ImageButton
            android:id="@+id/icon_6"
            android:layout_width="35dp"
            android:layout_height="35dp"

            android:layout_marginLeft="6dp"

            android:background="@drawable/ic_grow">
        </ImageButton>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <Button
        android:id="@+id/add_income_btn"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_add_category_btn"

        android:layout_marginTop="35dp"
        android:layout_marginBottom="20dp"
        android:text="@string/add_category_btn"
        android:textAllCaps="false"
        android:fontFamily="@font/rubik_medium"


        app:layout_constraintTop_toBottomOf="@id/icons_layout_add_category"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>