<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/dialog_add_new_item_main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_dialog"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/btn_close_add_dialog"
        android:layout_width="22dp"
        android:layout_height="22dp"

        android:background="@drawable/ic_cross"

        android:layout_marginTop="17dp"
        android:layout_marginRight="10dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </ImageButton>

    <TextView
        android:id="@+id/sum_add_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_weight="1"
        android:text="@string/edit_sum_dialog"
        style="@style/boldFont_16"

        app:layout_constraintTop_toBottomOf="@id/btn_close_add_dialog"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </TextView>

    <EditText
        android:id="@+id/sum_edit_text"
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"

        style="@style/edit_text_dialog_add"
        android:background="@drawable/shape_edit_text_add_dialog"

        app:layout_constraintTop_toBottomOf="@id/sum_add_dialog"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </EditText>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_btn"
        android:layout_width="140dp"
        android:layout_height="40dp"

        android:background="@drawable/shape_bg_add_category_btn"

        android:text="@string/add_category_btn"
        android:layout_marginBottom="30dp"

        android:textColor="@color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/rubik_medium"

        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/sum_edit_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

    </androidx.appcompat.widget.AppCompatButton>
</androidx.constraintlayout.widget.ConstraintLayout>